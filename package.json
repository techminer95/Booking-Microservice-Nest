{
    "name": "nestjs-microservices-rabbitmq",
    "version": "0.0.3",
    "description": "About RabbitMQ is an open-source and lightweight message broker which supports multiple messaging protocols.",
    "author": "Hebert Barros <hebert@hotbrains.com.br>",
    "private": true,
    "license": "UNLICENSED",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "engines": {
        "node": ">=16.18",
        "npm": ">=8.18"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"scripts/**/*.(js|ts|md|mjs|cjs)\"",
        "start:worker": "NODE_ENV=development && node scripts/worker.cjs",
        "start": "NODE_ENV=development && nest start",
        "start:dev": "tsc -p tsconfig.json && NODE_ENV=development nodemon src/main.ts --watch",
        "start:debug": "NODE_ENV=development && nest start --debug --watch",
        "start:prod": "node dist/main",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "prepare:enviroment": "node scripts/dev-enviroment.cjs",
        "lint": "eslint src --ext .js,.ts",
        "lint:fix": "eslint src --fix --ext .js,.ts",
        "prepare": "husky install",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "dependencies": {
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "10.2.10",
        "@nestjs/mapped-types": "2.0.4",
        "@nestjs/microservices": "^10.2.10",
        "@nestjs/platform-express": "^10.2.10",
        "@nestjs/schematics": "10.0.3",
        "@opentelemetry/api": "^1.7.0",
        "@opentelemetry/auto-instrumentations-node": "^0.40.1",
        "@opentelemetry/exporter-jaeger": "^1.18.1",
        "@opentelemetry/exporter-prometheus": "^0.45.1",
        "@opentelemetry/exporter-zipkin": "^1.18.1",
        "@opentelemetry/instrumentation-amqplib": "^0.33.4",
        "@opentelemetry/instrumentation-express": "^0.33.3",
        "@opentelemetry/instrumentation-http": "^0.45.1",
        "@opentelemetry/instrumentation-nestjs-core": "^0.33.3",
        "@opentelemetry/metrics": "^0.24.0",
        "@opentelemetry/node": "^0.24.0",
        "@opentelemetry/resources": "^1.18.1",
        "@opentelemetry/sdk-node": "^0.45.1",
        "@opentelemetry/sdk-trace-base": "^1.18.1",
        "@opentelemetry/sdk-trace-node": "^1.18.1",
        "@opentelemetry/semantic-conventions": "^1.18.1",
        "@types/uuid": "^9.0.7",
        "amqp-connection-manager": "^4.1.14",
        "amqplib": "^0.10.3",
        "async-retry": "^1.3.3",
        "class-transformer": "0.5.1",
        "date-fns": "^2.30.0",
        "dotenv": "^16.3.1",
        "express": "4.18.2",
        "lodash": "^4.17.21",
        "nest-shared": "^5.0.3",
        "rimraf": "5.0.5",
        "tsyringe": "4.8.0",
        "yup": "1.3.2"
    },
    "devDependencies": {
        "@babel/cli": "7.23.4",
        "@babel/core": "7.23.3",
        "@babel/node": "7.22.19",
        "@babel/preset-env": "7.23.3",
        "@nestjs/cli": "10.2.1",
        "@nestjs/testing": "10.2.10",
        "@types/amqplib": "^0.10.4",
        "@types/dotenv": "8.2.0",
        "@types/express": "4.17.21",
        "@types/jest": "29.5.10",
        "@types/node": "^20.10.0",
        "@types/supertest": "2.0.16",
        "@typescript-eslint/eslint-plugin": "6.12.0",
        "@typescript-eslint/parser": "6.12.0",
        "@typescript-eslint/typescript-estree": "6.12.0",
        "eslint": "8.54.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-prettier": "9.0.0",
        "eslint-plugin-import": "2.29.0",
        "eslint-plugin-prettier": "5.0.1",
        "husky": "8.0.3",
        "jest": "29.7.0",
        "prettier": "3.1.0",
        "supertest": "6.3.3",
        "ts-jest": "29.1.1",
        "ts-loader": "9.5.1",
        "ts-node": "10.9.1",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.3.2"
    },
    "optionalDependencies": {
        "@nestjs/common": "^10.2.10",
        "class-validator": "^0.14.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
